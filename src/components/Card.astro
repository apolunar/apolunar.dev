---
import FormattedDate from "./FormattedDate.astro";

const {title, description, author, date, image, link} = Astro.props;
---

<div class="card">
    {image && <img width={720} height={360} src={image} alt="" />}
    <div class="info">
        <p class="date">
            {date && <FormattedDate date={date} />}
        </p>
        <a href={link}>
            <h4 class="title">{title}</h4>
        </a>
    </div>
    <p>{description}</p>
</div>

<style>
    .date {
        color: gray;
        font-size: 15px;
    }
</style>